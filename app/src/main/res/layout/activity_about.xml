<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/AboutSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/AboutDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AboutSection"
        android:layout_marginTop="40dp"
        android:text="This is very Basic and Simple Android Application.\nTruth or dare? is a mostly verbal party game requiring two or more players.\nThere is bottle in the middle of players and Players spin it  and when the bottle stops the nozzle of bottle indicates a player and that player has to choose given choice between answering a question Truthfully or performing a dare.\nThis Android Application is very helpful when u haven't a bottle."
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/CreditTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AboutDescription"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:text="Â©Saini"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

</LinearLayout>